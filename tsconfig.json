    "module": "esNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "lib": [
      "esNext",
    ],
    "target": "ES2020",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "demo"
  ],
}
